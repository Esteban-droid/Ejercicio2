package ObjectMaster2;

import ObjectMaster1.Human;

public class Wizard extends Human{

	public int health = 50;
	public int intelligence = 8;
	
	public void heal(Human humano) {
		
		System.out.println("Humano sanado");
		humano.health = humano.health+intelligence;
		System.out.println("Vida del humano curado: " + humano.health);
		System.out.println("------------------------------------------");
	
	}
	
	public void fireBall(Human humano) {
		
		System.out.println("Humano recibe bola de fuego!");
		humano.health = humano.health-intelligence*3;
		System.out.println("Vida del humano dañado: " + humano.health);
		System.out.println("------------------------------------------");
		
	}
	
	public void desiplayEnergy() {
		
		System.out.println("Nivel de vida mago: " + health);
		System.out.println("------------------------------------------");
	}

}
